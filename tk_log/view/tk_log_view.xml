<?xml version="1.0"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="tk_log.logs_view_form">
			<field name="name">tk_log.logs_view_form</field>
			<field name="model">tk_log.log</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
                <form string="Logs" version="7.0">
                    <sheet>
                        <h1><field name="model_name" readonly="1" /></h1>
                        <h4><field name="date" readonly="1" /></h4>
                        <group>
                            <field name="message" readonly="1" />
                        </group>
                        <group string="Infos">
                            <field name="level" readonly="1" />
                            <field name="user" readonly="1" />
                        </group>
                        <field name="model" readonly="1" invisible="1" />
                        <field name="model_id" readonly="1" invisible="1" />
                        <button attrs="{'invisible': ['|',('model','=',False),('model_id','=',0)]}" icon="gtk-redo" name="see_entity" string="See entity" type="object"/>
                    </sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="tk_log.logs_view_tree">
			<field name="name">tk_log.logs_view_tree</field>
			<field name="model">tk_log.log</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Imports" colors="blue:level=='debug';green:level=='info';red:level=='error';orange:level=='warn';darkred:level=='fatal'">
                    <field name="model_name"  />
                    <field name="label"  />
                    <field name="model"  />
                    <field name="date"  />
                    <field name="level"  />
                    <field name="user"  />
                    <field name="model" invisible="1" />
                    <field name="model_id" invisible="1" />
                    <button attrs="{'invisible': ['|',('model','=',False),('model_id','=',0)]}" icon="gtk-redo" name="see_entity" string="See entity" type="object"/>
				</tree>
			</field>
		</record>

        <record id="log_search_form_view" model="ir.ui.view">
            <field name="name">log.search.form</field>
            <field name="model">tk_log.log</field>
            <field name="arch" type="xml">
                <search string="Log">
                    <field name="message" string="Message" filter_domain="[('message','ilike',self)]"/>
                    <field name="model" string="Model"/>
                    <field name="user" string="Model"/>
                    <filter string="Error" icon="terp-accessories-archiver" domain="[('level','=','error')]"/>
                    <filter string="Warn" icon="terp-accessories-archiver" domain="[('level','=','warn')]"/>
                    <filter string="Fatal" icon="terp-accessories-archiver" domain="[('level','=','fatal')]"/>
                    <filter string="Info" icon="terp-accessories-archiver" domain="[('level','=','info')]"/>
                    <filter string="Debug" icon="terp-accessories-archiver" domain="[('level','=','debug')]"/>
                    <separator/>
                    <group  expand='0' string='Group by...'>
                        <filter string='Level' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'level'}"/>
                        <filter string='User' icon="terp-go-home" domain="[]" context="{'group_by' : 'user'}" />
                        <filter string='Model' icon="terp-go-home" domain="[]" context="{'group_by' : 'model'}" />
                    </group>
                </search>
            </field>
        </record>
	</data>
</openerp>