<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-extend="PosWidget">
        <t t-jquery=".control-buttons" t-operation="after">
            <div class="placeholder-ConsumerGoods"></div>
        </t>
    </t>

    <t t-name="ConsumerGoodsWidget">
        <div>
            <div class="consumer-goods touch-scrollable consumer-goods-top">
                <button class="consumer-good-button consumer-good-eat-in">
                    Eat-in
                </button>

                <button class="consumer-good-button consumer-good-takeaway">
                    Takeaway
                </button>
            </div>
            <div class="consumer-goods touch-scrollable" style="padding-top:15px;">
              <button class="consumer-good-button consumer-good-direction">
                    Direction
                </button>

                <button class="consumer-good-button consumer-good-representative">
                    Representatives
                </button>
            </div>
        </div>
    </t>

</templates>
