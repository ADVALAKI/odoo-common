<openerp>
    <data>
         <!--Product Packaging-->
        <record id="tk_product_packaging_tree_view" model="ir.ui.view">
            <field name="name">tk.product.packaging.tree.view</field>
            <field name="inherit_id" ref="product.product_packaging_tree_view"/>
            <field name="model">product.packaging</field>
            <field name="arch" type="xml">
                <field name="ul_container" position="after">
                    <field name="base"/>
                    <field name="intermediate"/>
                    <field name="delivery"/>
                </field>
            </field>
        </record>


        <record id="tk_product_product_form_view" model="ir.ui.view">
            <field name="name">tk.product.product.form.view</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <!--Packaging-->
                <xpath expr="//field[@name='route_ids']/.." position="after">
                    <group string="Packaging" colspan="4">
                        <field name="packaging_ids" groups="product.group_stock_packaging" nolabel="1">
                            <form string="Packaging" version="7.0">
                                <group col="4">
                                    <field name="ean"/>
                                    <field name="sequence" invisible="1"/>
                                    <newline/>
                                    <field name="qty"/>
                                    <field name="ul"/>
                                    <field name="base"/>
                                    <field name="intermediate"/>
                                    <field name="delivery"/>
                                    <separator colspan="4" string="Palletization"/>
                                    <field name="ul_qty"/>
                                    <field name="ul_container" domain="[('type', '=', 'pallet')]" context="{'default_type': 'pallet'}"/>
                                    <field name="rows"/>
                                    <field name="weight"/>
                                </group>
                                <separator colspan="4" string="Description"/>
                                <field name="name"/>
                            </form>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</openerp>