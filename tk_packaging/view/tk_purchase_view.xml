<openerp>
    <data>
        <record id="tk_purchase_order_form_view" model="ir.ui.view">
            <field name="name">tk.purchase.order.form.view</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <!--Packaging-->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="qty_packaging" on_change="onchange_qty_packaging(qty_packaging, packaging_id, context)"/>
                    <field name="packaging_id"/>
                </xpath>

                <!--Remove on change on product quantity-->
                <xpath expr="//field[@name='product_qty']" position="replace">
                    <field name="product_qty" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>